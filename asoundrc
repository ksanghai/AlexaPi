pcm.monocard {
         type plug
         slave.pcm "plughw:2,0"
	 slave.channels  2
         slave.rate 48000
       }
ctl.monocard {
         type hw
         card 2
         device 0
       }

pcm.dmixer  {
 	type dmix
 	ipc_key 1024
 	slave {
		pcm "hw:1,0"
		period_time 0
		period_size 1024
		buffer_size 4096
	}
	bindings {
		0 0
		1 1
	}
}

ctl.dmixer {
	type hw
	card 1
	device 0
}

pcm.!default {
	  type asym
	  playback.pcm {
	      type plug
	      slave.pcm "dmixer"
	  }	
          capture.pcm {
             type plug
             slave.pcm "monocard"
          }
       }

       ctl.!default {
	  type asym
          playback.pcm {
             type plug
	     slave.pcm "dmixer"
          }
          capture.pcm {
             type plug
             slave.pcm "monocard"
          }
       }
